{
  "name": "lauf-monorepo",
  "version": "0.1.5",
  "repository": "https://github.com/cefn/lauf",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm recursive run build",
    "build:lauf": "pnpm recursive run build --filter '@lauf/*'",
    "build:changed": "pnpm recursive run build --filter '...[origin/main]...'",
    "lint": "pnpm exec -- eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:changed": "pnpm recursive exec --filter '...[origin/main]...' -- eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "pnpm recursive --workspace-concurrency=1 run test",
    "test:changed": "pnpm recursive --workspace-concurrency=1 run test --filter '...[origin/main]...'",
    "check": "pnpm recursive run check",
    "check:changed": "pnpm recursive run check --filter '...[origin/main]...'",
    "check:lauf": "pnpm recursive run check --filter '@lauf/*'",
    "validate": "ts-node-esm ./validate-packages.ts",
    "release": "pnpx changeset add && git add && git commit -a && pnpx changeset version && pnpm install && pnpm publish -r",
    "docs": "typedoc --tsconfig tsconfig.typedoc.json --includes ./ --out api",
    "docs:watch": "pnpm run docs -- --watch",
    "docs:serve": "reload -d api",
    "docs:dev": "npm-run-all --parallel docs:watch docs:serve"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/cli": "^2.24.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.0.3",
    "@types/lodash-es": "^4.17.6",
    "@types/prompt-sync": "^4.2.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "chalk": "^5.0.1",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^8.0.3",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "jest-expect-message": "^1.1.2",
    "minimatch": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prompt-sync": "^4.2.0",
    "reload": "^3.2.0",
    "ts-jest": "^29.0.2",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.1",
    "yargs": "^17.5.1"
  }
}
