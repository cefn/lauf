{
  "name": "lauf-monorepo",
  "version": "0.1.5",
  "repository": "https://github.com/cefn/lauf",
  "private": true,
  "scripts": {
    "build": "pnpm recursive run build",
    "build:lauf": "pnpm recursive run build --filter '@lauf/*'",
    "build:changed": "pnpm recursive run build --filter '...[origin/main]...'",
    "lint": "pnpm exec -- eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:changed": "pnpm recursive exec --filter '...[origin/main]...' -- eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "test:changed": "pnpm recursive run test --filter '...[origin/main]...'",
    "check": "pnpm recursive run check",
    "check:changed": "pnpm recursive run check --filter '...[origin/main]...'",
    "check:lauf": "pnpm recursive run check --filter '@lauf/*'",
    "validate": "ts-node ./validate-packages.ts",
    "release": "pnpx changeset add && git add && git commit -a && pnpm install && pnpm publish -r",
    "docs": "typedoc --tsconfig tsconfig.typedoc.json --includes ./ --readme none"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-typescript": "^7.13.0",
    "@changesets/cli": "^2.16.0",
    "@testing-library/react": "^11.2.5",
    "@testing-library/react-hooks": "^5.1.0",
    "@types/jest": "^26.0.20",
    "@types/jest-expect-message": "^1.0.3",
    "@types/lodash": "^4.14.168",
    "@types/prompt-sync": "^4.1.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "chalk": "^4.1.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "jest-expect-message": "^1.0.2",
    "lodash": "^4.17.21",
    "minimatch": "^3.0.4",
    "prettier": "^2.2.1",
    "prompt-sync": "^4.2.0",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typedoc": ">=0.21.0-beta.2",
    "typescript": "^4.3.4",
    "webpack": "^5.24.2"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "yargs": "^16.2.0"
  }
}
