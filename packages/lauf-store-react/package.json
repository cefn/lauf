{
  "name": "@lauf/lauf-store-react",
  "version": "1.0.0",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf tsconfig.build.tsbuildinfo",
    "prepack": "yarn build",
    "build": "yarn clean && yarn compile",
    "compile": "tsc -p tsconfig.build.json",
    "precoverage": "yarn add --dev react",
    "postcoverage": "yarn remove react; yarn add --peer react",
    "coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "pretest": "npm install react --no-save",
    "posttest": "npm uninstall react --no-save; rm package-lock.json",
    "test": "jest"
  },
  "peerDependencies": {
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/jest-expect-message": "^1.0.3",
    "@types/lodash": "^4.14.168",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "jest": "^26.6.3",
    "jest-expect-message": "^1.0.2",
    "react-dom": "^17.0.1",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0"
  },
  "dependencies": {}
}
